<div>
  <% if persona_signed_in? then %>
    Load the photo and the editor here
    <div>
      <%= image_tag @photo.avatar.medium %>
    </div>
  <% else %>
    <div>
      <%= link_to 'Sign In', new_persona_session_path %> or <%= link_to 'Sign Up', new_persona_registration_path %> to edit this photo
    </div>
  <% end %>
</div>
