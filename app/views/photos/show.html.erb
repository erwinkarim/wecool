<%- model_class = Photo -%>
<div class="page-header">
  <h1><%= @photo.title == nil ? 'Untitled' : @photo.title %></h1>
</div>

<div>
  <div>
    <%= link_to 'Other Versions', photo_versions_path(@photo.id) %>
  </div>
  <div>
    <%= image_tag @photo.avatar.xlarge %>
  </div>
  <div>
    by <%= link_to @persona.screen_name, persona_path(@persona.screen_name) %>
  </div>
  <div>
    <p><%= @photo.description == nil ? 'No Description' : @photo.description %></p>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              photos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_photo_path(@photo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              photo_path(@photo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
