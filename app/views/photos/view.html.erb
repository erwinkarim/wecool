<%- model_class = Photo -%>
<div class="page-header">
  <h1><%= @photo.title == nil ? 'Untitled' : @photo.title %></h1>
</div>

<div class="row-fluid">
  <div class="span9">
    <div class="navbar">
      <!-- menubar for photo -->
      <div class="navbar-inner">
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">File</a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Other Versions', photo_version_path(@persona.screen_name, @photo.id) %></li>
                <li><%= link_to 'Edit This', photo_editor_path(@photo.id) %></li>
                <li><%= link_to 'Exif Data', photo_view_exif_path(@persona.screen_name, @photo.id) %></li>
              </ul>
          </li>
        </ul>
      </div>
    </div><!-- navbar -->
    <div class="">
      <!-- picture description -->
      <div>
        <%= image_tag @photo.avatar.xlarge %>
      </div>
      <div>
        by <%= link_to @persona.screen_name, persona_path(@persona.screen_name) %>
      </div>
      <div>
        <p><%= @photo.description == nil ? 'No Description' : @photo.description %></p>
      </div>
    </div>
  </div><!-- span9 -->
    
  <div class="span3">
    <!-- sidebar -->
    <div class="pagination">
      <ul>
        <% if @photo_prev.nil? then %>
          <li><a href="#">First</a></li>
        <% else %>
          <li><%= link_to image_tag(@photo_prev.avatar.thumb100), photo_view_path(@persona.screen_name, @photo_prev.id) %>
        <% end %>
        <% if @photo_next.nil? then %>
          <li><a href="#">Last</a></li>
        <% else %>
          <li><%= link_to image_tag(@photo_next.avatar.thumb100), photo_view_path(@persona.screen_name, @photo_next.id) %>
        <% end %>
      </ul>
    </div>
  </div><!-- span3 -->
</div><!-- row -->

<div class="row-fluid">
</div>

<% if persona_signed_in? && @persona.id == current_persona.id then %>
<div class="row-fluid">
  <div class="span9 form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                photo_path(@persona.screen_name), :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_photo_path(@photo), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                photo_path(@photo),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
</div>
<% end %>
