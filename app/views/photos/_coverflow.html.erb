<div class="pagination pagination-centered">
  <ul>
    <% if @photolist.first == @photo then %>
      <li><%= link_to image_tag('http://placehold.it/100x100'), '#' %></li>
    <% end %>
    <% @photolist.each do |photo| %>
      <li><%= link_to image_tag(photo.avatar.square100), photo_view_path(@persona.screen_name, photo.id), 
        :style => photo == @photo ? 'background-color:red' : '' %></li>
    <% end %>
    <% if @photolist.last == @photo then %>
      <li><%= link_to image_tag('http://placehold.it/100x100'), '#' %></li>
    <% end %>
  </ul>
</div>
