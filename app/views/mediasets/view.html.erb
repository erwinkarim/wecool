<h2><%= @mediaset.title %></h2>
<p><%= @mediaset.description.nil? ? 'No Description' : @mediaset.description %></p>

<div>
  <% if  @mediaset_photos.empty? then %>
    'Empty set'
  <% else %>
    <ul class="thumbnails">
      <% @mediaset_photos.each do |photo| %>
        <li><%= link_to image_tag(photo.avatar.medium, :class => 'img-polaroid'), photo_view_path(@persona.screen_name, photo.id), :class => 'thumbnail' %></li>
      <% end %>
    </ul>
  <% end %>  
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mediaset_path(params[:persona_id]), :class => 'btn'  %>
  <%= link_to 'Edit', edit_mediaset_path(params[:persona_id], params[:id]), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mediaset_path(@mediaset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
