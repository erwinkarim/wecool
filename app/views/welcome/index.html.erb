<% if persona_signed_in? then %>
  <div>
    <p> Welcome, <%= current_persona.screen_name %>  </p>
  </div>
  <div class="header">  
    <h2>Your recent photos</h2>
    <p>List recent photos</p>
    <div class="pagination">
      <ul>
        <% @myPhotos.each do | thisphoto| %>
          <li><%= link_to image_tag(thisphoto.avatar.tiny), 
            photo_view_path(current_persona.screen_name, thisphoto.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <%= link_to 'Sign In', new_persona_session_path %> or <%= link_to 'Sign Up', new_persona_registration_path %>
<% end %>
<%= render "photos/recent" %>
