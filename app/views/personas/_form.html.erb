<%= form_for @persona, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :realname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :realname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :screen_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :screen_name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                personas_path , :class => 'btn' %>
  </div>
<% end %>
