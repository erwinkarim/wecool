<% @focus = 'Upgrade Account' %>
<%= render "common/personaHeaderBar" %>

<div class="page-header">
  <h2>Upgrade to Premium</h2>
</div>

<div class="row-fluid">
  <div class="span8 offset2">
    <h3>Benefits of upgrade</h2>  
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th class="span2">Condition</th>
          <th class="span5">Normal</th>
          <th class="span5">Premium</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Condition</td>
          <td>Normal Condition</td>
          <td>Benefit 1</td>
        </tr>
        <tr>
          <td>Condition</td>
          <td>Normal Condition</td>
          <td>Benefit 2</td>
        </tr>
        <tr>
          <td>Condition</td>
          <td>Normal Condition</td>
          <td>Benefit 3</td>
        </tr>
        <tr>
          <td>Condition</td>
          <td>Normal Condition</td>
          <td>Benefit 4</td>
        </tr>
        <tr>
          <td>Condition</td>
          <td>Normal Condition</td>
          <td>Benefit 5</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span8 offset2">
    <h3>Upgrade Now!!</h3>
    <%= form_tag '#', :class=>'form-horizontal' do -%>
      <legend>Select upgrade duration</legend>  
      <div class="control-group">
        <%= label_tag 'duration', 
          radio_button_tag( 'duration', '1y') + '1 year ($xx.xx)', 
          :class=> 'radio controls' 
        %>
        <%= label_tag 'duration', 
          radio_button_tag( 'duration', '2y') + '2 year ($xx.xx)', 
          :class=> 'radio controls' 
        %>
      </div> 
      <div class="form-actions">
        <%= link_to 'No Thanks', root_path , :class=> 'btn' %>
        <%= button_tag 'Upgrade Now', :class => 'btn btn-primary', :type => 'button' %>
      
      </div>
    <% end -%>
  </div>
</div>
