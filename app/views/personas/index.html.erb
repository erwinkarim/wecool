<%- model_class = Persona -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div>
  <ul class="thumbnails">
    <% @personas.each do |persona| %>
      <li>
        <div class="thumbnail">
          <%= link_to image_tag('http://placehold.it/160x120'), persona_path(persona.screen_name) %>
          <br />
          <%= link_to persona.screen_name,persona_path(persona.screen_name) %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
