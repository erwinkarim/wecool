var handle = $('#tagcontent');
var x = 1;
<% @tags.each do |tag| %>
  handle.append( $('<tr/>') );
  handle.find('tr:last').append( $('<td/>',{ text:x++ } ) );
  <% if (defined? @persona).nil? then %>
    handle.find('tr:last').append( $('<td/>').
      html('<i class="icon-tag"></i> <%= link_to tag, tag_path(tag) %>') );
  <% else %>
    handle.find('tr:last').append( $('<td/>').
      html('<i class="icon-tag"></i> <%= link_to tag, 
        persona_show_tag_path(@persona.screen_name, tag) %>') 
    );
  <% end %>
<% end %>
