
<div class="row-fluid">
  <div class="span12">
    <h2>The Photo:</h2>
    <%= image_tag @photo.avatar.tiny, :class => 'img-polaroid' %>
  </div>
</div>

<div class="row-fluid">
  <h3>Tags</h3>
  <div class="span12">
    <% @photo.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <h2>Related Photos</h2>
  <div class="span12">
    <% @related_photos.each do |photo| %>
      <%= image_tag photo.avatar.tiny, :class => 'img-polaroid pull-left', :style => 'margin:2px;' %>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= button_tag 'Load More', { :class => 'btn btn-primary' } %>
  </div>
</div>
