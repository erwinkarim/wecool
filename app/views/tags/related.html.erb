
<div class="row-fluid">
  <div class="span12">
    <h2><%= @photo.title %></h2>
    <%= image_tag @photo.avatar.small, :class => 'img-polaroid' %>
  </div>
</div>

<div class="row-fluid">
  <h3>Tags</h3>
  <div class="span12">
    <% @photo.tags.each do |tag| %>
      <%= link_to tag.name , tag_path(tag.name) %>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <h2>Related Photos</h2>
  <div class="endless-photos span12" last="0" >
    <div class="endless_scroll_inner_wrap">
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= button_tag 'Load More', { :class => 'btn btn-primary', :role => 'button', :id => 'loadMore' } %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready( function(){
    //load the related photos
    $.ajax({
      url: '/photos/get_more/' + $('.endless-photos').attr('last'),
      data: { mediatype:'related', focusPhotoID:<%= @photo.id %> },
      dataType: 'script'
    });


    $('#loadMore').click( function() {
      $.ajax({
        url: '/photos/get_more/' + $('.endless-photos').attr('last'),
        data: { mediatype:'related', focusPhotoID:<%= @photo.id %> },
        dataType: 'script'
      });
      
    });
  });
</script>
