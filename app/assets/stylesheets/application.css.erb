}

.thin-font{
  font-family: 'Roboto', sans-serif;
}

.highlightPhoto{
  border: 1px solid red;
}

.hero-unit-front {
  background-position: center;
  background-repeat: no-repat;
  min-height:400px;
  max-width:1080px;
  padding:60px;
  margin-left:auto;
  margin-right:auto;
}

.white-font{
  color:white;
  text-shadow:2px 2px 16px black;
}

.black-font{
  color:black;
  text-shadow:4px 4px 20px white;
}

#front-panel-1{
